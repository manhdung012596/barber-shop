@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section mb-5">
    <div class="container">
        <h1 class="hero-title">Chào mừng đến với BarberShop</h1>
        <p class="hero-subtitle">Trải nghiệm cắt tóc đẳng cấp nhất thị trấn</p>
        <a asp-controller="Booking" asp-action="Index" class="btn btn-primary btn-lg">Đặt Lịch Ngay</a>
    </div>
</div>

<!-- Features Section -->
<div class="py-5 bg-white">
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-cut fa-3x mb-3 text-warning"></i>
                <h3>Cắt Tóc Chuyên Nghiệp</h3>
                <p>Thợ cắt tóc của chúng tôi là những chuyên gia về các kiểu tóc mới nhất.</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-pump-soap fa-3x mb-3 text-warning"></i>
                <h3>Sản Phẩm Cao Cấp</h3>
                <p>Chúng tôi chỉ sử dụng những sản phẩm tốt nhất cho tóc và râu của bạn.</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-clock fa-3x mb-3 text-warning"></i>
                <h3>Đặt Lịch Dễ Dàng</h3>
                <p>Đặt lịch hẹn trực tuyến chỉ với vài cú nhấp chuột.</p>
            </div>
        </div>
    </div>
</div>

<!-- Featured Services Section -->
<div class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="mb-5">Dịch Vụ Nổi Bật</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="/img/cattoccodien.png" class="card-img-top" alt="Cắt Tóc Cổ Điển" onerror="this.src='https://via.placeholder.com/300x200?text=Cat+Toc'">
                    <div class="card-body">
                        <h5 class="card-title">Cắt Tóc Cổ Điển</h5>
                        <p class="card-text">Cắt tóc phong cách truyền thống với kéo và tông đơ.</p>
                        <a asp-controller="Service" asp-action="Index" class="btn btn-outline-warning mt-auto">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="/img/caoraucodien.png" class="card-img-top" alt="Cạo Râu Cổ Điển" onerror="this.src='https://via.placeholder.com/300x200?text=Cao+Rau'">
                    <div class="card-body">
                        <h5 class="card-title">Cạo Râu & Tạo Kiểu</h5>
                        <p class="card-text">Cạo râu sạch sẽ và tạo kiểu râu.</p>
                        <a asp-controller="Service" asp-action="Index" class="btn btn-outline-warning mt-auto">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="/img/caomatkhannong.png" class="card-img-top" alt="Cạo Mặt Khăn Nóng" onerror="this.src='https://via.placeholder.com/300x200?text=Cao+Mat'">
                    <div class="card-body">
                        <h5 class="card-title">Cạo Mặt Khăn Nóng</h5>
                        <p class="card-text">Thư giãn với dịch vụ cạo mặt khăn nóng.</p>
                        <a asp-controller="Service" asp-action="Index" class="btn btn-outline-warning mt-auto">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
