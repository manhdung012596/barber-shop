@model BarberShop.Models.LookupViewModel

@{
    ViewData["Title"] = "Tra Cứu";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Tra Cứu Đơn Hàng & Đặt Lịch</h2>

    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="phoneNumber" class="form-control me-2" placeholder="Nhập số điện thoại của bạn..." value="@Model.PhoneNumber" />
                <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
            </form>
        </div>
    </div>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <h3 class="mb-3">Đơn Hàng</h3>
        <div class="table-responsive mb-5">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã Đơn Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Khách Hàng</th>
                        <th>Tổng Tiền</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.CustomerName</td>
                            <td>@item.TotalAmount.ToString("N0") VNĐ</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi Tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (Model.Bookings != null && Model.Bookings.Any())
    {
        <h3 class="mb-3">Lịch Đặt</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-success">
                    <tr>
                        <th>Mã Lịch</th>
                        <th>Ngày Hẹn</th>
                        <th>Khách Hàng</th>
                        <th>Dịch Vụ</th>
                        <th>Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Bookings)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.AppointmentTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.CustomerName</td>
                            <td>@item.Service?.Name</td>
                            <td><span class="badge bg-success">Đã Đặt</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if ((Model.Orders == null || !Model.Orders.Any()) && (Model.Bookings == null || !Model.Bookings.Any()) && !string.IsNullOrEmpty(Model.PhoneNumber))
    {
        <div class="alert alert-warning text-center">
            Không tìm thấy đơn hàng hoặc lịch đặt nào với số điện thoại: <strong>@Model.PhoneNumber</strong>
        </div>
    }
</div>
