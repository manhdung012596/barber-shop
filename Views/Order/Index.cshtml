@model IEnumerable<BarberShop.Models.Order>

@{
    ViewData["Title"] = "Tra Cứu Đơn Hàng";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Tra Cứu Đơn Hàng</h2>

    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="phoneNumber" class="form-control me-2" placeholder="Nhập số điện thoại của bạn..." value="@ViewBag.PhoneNumber" required />
                <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã Đơn Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Khách Hàng</th>
                        <th>Tổng Tiền</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.CustomerName</td>
                            <td>@item.TotalAmount.ToString("N0") VNĐ</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi Tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (ViewBag.PhoneNumber != null)
    {
        <div class="alert alert-warning text-center">
            Không tìm thấy đơn hàng nào với số điện thoại: <strong>@ViewBag.PhoneNumber</strong>
        </div>
    }
</div>
